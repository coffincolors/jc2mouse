[Unit]
Description=jc2mouse patched bluetoothd (session mode)
After=dbus.service
Conflicts=bluetooth.service
# If your distro uses bluetooth.target, you can add:
# Conflicts=bluetooth.target

[Service]
Type=simple
# This path will be created by our setup script:
ExecStart=/opt/jc2mouse/bluez/libexec/bluetooth/bluetoothd -n -d
Restart=on-failure
RestartSec=1

[Install]
WantedBy=multi-user.target
